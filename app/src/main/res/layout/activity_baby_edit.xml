<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BabyEdit"
    android:orientation="vertical">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome" />

    <EditText
        android:id="@+id/textName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sexo" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroupBabyEdit">
        <RadioButton
            android:id="@+id/radioButtonMaleBabyEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menino" />

        <RadioButton
            android:id="@+id/radioButtonFemaleBabyEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menina" />
    </RadioGroup>
    <TextView
        android:text="Data de nascimento (dd/MM/yyyy)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/textDate"
        android:focusable="false"
        android:inputType="date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inserir peso:"
        />
    <ImageButton
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/addpeso"
        android:id="@+id/addPeso"
        android:background="@android:color/background_light"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="300px"
            android:layout_height="20dp"
            android:text="Data"
            android:background="@android:color/darker_gray"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:id="@+id/dataList"
            />
        <Button

            android:layout_width="300px"
            android:layout_height="20dp"
            android:text="Peso"
            android:background="@android:color/darker_gray"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:id="@+id/atvList"
            />


    </LinearLayout>



    <ListView
        android:id="@+id/listPeso"
        android:layout_width="match_parent"
        android:layout_height="180dp">
    </ListView>

    <Button
        android:text="Confirm"
        android:onClick="confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




</LinearLayout>